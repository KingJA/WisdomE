<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    >



        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_name"
                    style="@style/font_3_15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:background="@drawable/shape_lblue_bblue_r2"
                    android:paddingRight="4dp"
                    android:paddingLeft="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_type"
                    style="@style/font_f_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_cardId"
                style="@style/font_9_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="8dp"
                android:text="330333333333333333" />


        </LinearLayout>
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_clear"
        android:layout_width="15dp"
        android:layout_height="15dp" />


</RelativeLayout>


