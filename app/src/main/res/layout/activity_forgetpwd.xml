<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingLeft="37.5dp"
        android:paddingRight="37.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textColor="@color/colorStatus"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@color/colorHint" />

            <com.tdr.wisdome.view.material.MaterialEditText
                android:id="@+id/material_forgetPhoone"
                app:met_baseColor="@color/colorInput"
                app:met_clearButton="true"
                app:met_floatingLabel="normal"
                app:met_hideUnderline="true"
                app:met_primaryColor="@color/colorLine"
                app:met_singleLineEllipsis="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:hint="手机号"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="-10dp"
            android:background="@color/colorLine" />


        <Button
            android:id="@+id/btn_code"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/btnlogin_change"
            android:text="获取验证码"
            android:textColor="@drawable/textlogin_change"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>