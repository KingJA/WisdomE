<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/font_9_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="您的账号:" />

        <TextView
            android:id="@+id/et_phone"
            style="@style/font_red_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="" />
    </LinearLayout>

    <com.tdr.wisdome.view.material.MaterialEditText
        android:id="@+id/met_password"
        style="@style/met_nomal"
        android:layout_centerVertical="true"
        android:hint="密码(长度6-12,支持数字,字母,字符)"
        android:inputType="textPassword"
        app:met_floatingLabelText="密码" />

    <com.tdr.wisdome.view.material.MaterialEditText
        android:id="@+id/met_repeat_password"
        style="@style/met_nomal"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:hint="确认密码"
        android:inputType="textPassword"
        app:met_floatingLabelText="确认密码" />


    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_blue_match"
        android:gravity="center"
        android:padding="12dp"
        android:text="确定"
        android:textColor="@color/bg_white" />

</LinearLayout>
