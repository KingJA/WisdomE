<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_blue"
        android:padding="16dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_house_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_houseName"
                style="@style/font_f_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/font_f_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_sign"
                android:layout_width="86dp"
                android:layout_height="22dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/sel_sign" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_yellow">

        <ImageView
            android:id="@+id/iv_clock"
            android:layout_width="13dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_clock" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_close" />

        <TextView
            android:id="@+id/tv_read"
            style="@style/font_3_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/iv_close"
            android:text="点击查看" />

        <TextView
            android:id="@+id/tv_msg"
            style="@style/font_6_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_read"
            android:layout_toRightOf="@id/iv_clock"
            android:text="您的出租房xxxxxxxxxxxxxxxxxxxxxx您的出租房您的出租房您的出租房您的出租房" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="12dp">

        <TextView
            style="@style/font_3_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间布防" />


        <CheckBox
            android:id="@+id/cb_house"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/sel_cb_switch"
            android:button="@null" />

    </RelativeLayout>

    <View style="@style/divider_nomal_horizontal" />

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="12dp">

        <TextView
            style="@style/font_3_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预警信息提示" />


        <CheckBox
            android:id="@+id/cb_warm_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/sel_cb_switch"
            android:button="@null" />

    </RelativeLayout>

<!--    <View style="@style/divider_nomal_horizontal" />-->

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="12dp">

        <TextView
            style="@style/font_3_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="预警信息" />


        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"
            android:button="@null" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_count"
            style="@style/font_f_12"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/iv_arrow"
            android:background="@drawable/circle_red"
            android:gravity="center"
            android:text="56" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/bg_white"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_shuidian"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/house_shuidian" />

        <TextView
            style="@style/font_n_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_shuidian"
            android:text="水电煤气" />


        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right" />


    </RelativeLayout>

    <View style="@style/divider_nomal_horizontal" />

    <RelativeLayout
        android:id="@+id/rl_fangdao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_fangdao"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/house_fangdao" />

        <TextView
            style="@style/font_n_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_fangdao"
            android:text="居家防盗" />


        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right" />
    </RelativeLayout>
    <View style="@style/divider_nomal_horizontal" />
    <RelativeLayout
        android:id="@+id/rl_deviceInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_device"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/house_device" />
        <TextView
            style="@style/font_3_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_device"
            android:text="设备信息" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right" />
    </RelativeLayout>

    <View style="@style/divider_nomal_horizontal" />



</LinearLayout>