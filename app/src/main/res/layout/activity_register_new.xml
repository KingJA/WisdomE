<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.tdr.wisdome.view.material.MaterialEditText
                android:id="@+id/met_phone"
                style="@style/met_nomal"
                android:hint="手机号"
                android:inputType="number"
                app:met_clearButton="false"
                app:met_floatingLabelText="手机号" />

            <TextView
                android:id="@+id/tv_checkRegister"
                style="@style/font_blue_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:enabled="false"
                android:text="" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.tdr.wisdome.view.material.MaterialEditText
                android:id="@+id/met_code"
                style="@style/met_nomal"
                android:layout_centerVertical="true"
                android:hint="验证码"
                android:inputType="number"
                app:met_clearButton="false"
                app:met_floatingLabelText="验证码" />


            <TextView
                android:id="@+id/tv_getCode"
                style="@style/font_9_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:enabled="false"
                android:text="获取验证码" />

        </RelativeLayout>


        <com.tdr.wisdome.view.material.MaterialEditText
            android:id="@+id/met_password"
            style="@style/met_nomal"
            android:layout_marginTop="8dp"
            android:hint="密码(长度6-12,支持数字,字母,字符)"
            android:inputType="textPassword"
            app:met_floatingLabelText="密码" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@drawable/btn_gray_match"
            android:gravity="center"
            android:padding="12dp"
            android:text="确定"
            android:textColor="@color/bg_white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal">

        <TextView
            style="@style/font_9_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号?" />

        <TextView
            android:id="@+id/tv_goLogin"
            style="@style/font_blue_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即登录" />


    </LinearLayout>
</RelativeLayout>