<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"

    >

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_alarm"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_alarm" />


    <RelativeLayout
        android:id="@+id/rl_alarmType"
        android:layout_toRightOf="@id/iv_alarm"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_card_type"
            style="@style/font_3_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/tv_alarm_time"
            style="@style/font_9_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_alarm_msg"
        android:layout_marginTop="4dp"
        android:layout_below="@id/rl_alarmType"
        android:layout_toRightOf="@id/iv_alarm"
        style="@style/font_9_15_multi"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

</RelativeLayout>