<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="短信已经发送您的手机" />

    <TextView
        android:id="@+id/et_phone"
        style="@style/font_red_12"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.tdr.wisdome.view.material.MaterialEditText
            style="@style/met_nomal"
            android:inputType="number"
            android:layout_centerVertical="true"
            android:id="@+id/met_code"
            android:hint="验证码"
            app:met_floatingLabelText="验证码"
            app:met_clearButton="false"
            />


        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_getCode"
            style="@style/font_red_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="获取验证码" />

    </RelativeLayout>



    <TextView
        android:id="@+id/tv_forget_step_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_gray_match"
        android:gravity="center"
        android:padding="12dp"
        android:text="下一步"
        android:textColor="@color/bg_white" />

</LinearLayout>
