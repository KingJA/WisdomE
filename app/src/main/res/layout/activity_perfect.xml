<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FAEFD5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请通过相机获取身份证相关信息"
            android:textColor="@color/colorSearch" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="37.5dp"
            android:paddingRight="37.5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <com.tdr.wisdome.view.material.MaterialEditText
                    android:id="@+id/material_identity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="身份证号码"
                    android:maxLength="18"
                    android:textSize="15sp"
                    app:met_baseColor="@color/colorInput"
                    app:met_clearButton="true"
                    app:met_floatingLabel="normal"
                    app:met_hideUnderline="true"
                    app:met_primaryColor="@color/colorLine"
                    app:met_singleLineEllipsis="true" />

                <ImageView
                    android:id="@+id/image_identity"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/image_identity"
                    android:clickable="true" />

            </RelativeLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="-10dp"
                android:background="@color/colorLine" />

            <com.tdr.wisdome.view.material.MaterialEditText
                android:id="@+id/material_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:hint="出生年月"
                android:textSize="15sp"
                app:met_baseColor="@color/colorInput"
                app:met_clearButton="true"
                app:met_floatingLabel="normal"
                app:met_hideUnderline="true"
                app:met_primaryColor="@color/colorLine"
                app:met_singleLineEllipsis="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="-18dp"
                android:background="@color/colorLine" />

            <com.tdr.wisdome.view.material.MaterialEditText
                android:id="@+id/material_realName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="真实姓名"
                android:textSize="15sp"
                app:met_baseColor="@color/colorInput"
                app:met_clearButton="true"
                app:met_floatingLabel="normal"
                app:met_hideUnderline="true"
                app:met_primaryColor="@color/colorLine"
                app:met_singleLineEllipsis="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="-18dp"
                android:background="@color/colorLine" />

            <com.tdr.wisdome.view.material.MaterialEditText
                android:id="@+id/material_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:hint="性别"
                android:textSize="15sp"
                app:met_baseColor="@color/colorInput"
                app:met_clearButton="true"
                app:met_floatingLabel="normal"
                app:met_hideUnderline="true"
                app:met_primaryColor="@color/colorLine"
                app:met_singleLineEllipsis="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="-18dp"
                android:background="@color/colorLine" />

            <com.tdr.wisdome.view.material.MaterialEditText
                android:id="@+id/material_permanentAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:hint="户籍地址"
                android:textSize="15sp"
                app:met_baseColor="@color/colorInput"
                app:met_clearButton="true"
                app:met_floatingLabel="normal"
                app:met_hideUnderline="true"
                app:met_primaryColor="@color/colorLine"
                app:met_singleLineEllipsis="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="-18dp"
                android:background="@color/colorLine" />

            <Button
                android:id="@+id/btn_complete"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/btnlogin_change"
                android:text="完成"
                android:textColor="@drawable/textlogin_change"
                android:textSize="15sp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>