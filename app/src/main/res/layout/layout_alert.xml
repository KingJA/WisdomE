<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/linear_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_takephoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btntake_change"
            android:text="拍照"
            android:textColor="@color/colorPop"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBggray" />

        <Button
            android:id="@+id/btn_pickphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnpick_change"
            android:text="从本地相册选择"
            android:textColor="@color/colorPop"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btncancel_change"
            android:text="取消"
            android:textColor="@color/colorPop"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>