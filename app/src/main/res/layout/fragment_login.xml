<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingLeft="37.5dp"
        android:paddingRight="37.5dp">

        <com.tdr.wisdome.view.material.MaterialEditText
            android:id="@+id/material_loginName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名"
            android:textSize="15sp"
            app:met_baseColor="@color/colorInput"
            app:met_clearButton="true"
            app:met_floatingLabel="normal"
            app:met_hideUnderline="true"
            app:met_primaryColor="@color/colorLine"
            app:met_singleLineEllipsis="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="-10dp"
            android:background="@color/colorLine" />

        <com.tdr.wisdome.view.material.MaterialEditText
            android:id="@+id/material_loginPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:inputType="textPassword"
            android:layout_marginTop="12.5dp"
            android:textSize="15sp"
            app:met_baseColor="@color/colorInput"
            app:met_clearButton="true"
            app:met_floatingLabel="normal"
            app:met_hideUnderline="true"
            app:met_primaryColor="@color/colorLine"
            app:met_singleLineEllipsis="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="-10dp"
            android:background="@color/colorLine" />


        <TextView
            android:id="@+id/text_forgetPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="忘记密码？"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorHint"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/btnlogin_change"
            android:text="登录"
            android:textColor="@drawable/textlogin_change"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>