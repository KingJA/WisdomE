<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="12dp">

    <TextView
        style="@style/font_f_15"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="12dp"
        android:background="@mipmap/bg_cicle_blue"
        android:gravity="center"
        android:text="预警"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_alarmType"
                style="@style/font_3_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="过流预警"/>

            <TextView
                android:id="@+id/tv_alarmTime"
                style="@style/font_9_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="刚刚"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_alarmMsg"
                style="@style/font_9_12_multi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:lines="2"
                android:text="充电器在2017-10-10 12:20:20过热，请尽量处理，如果已经处理，可以忽略"/>

            <View
                android:id="@+id/v_readTag"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@mipmap/red_point"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>