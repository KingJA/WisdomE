<?xml version="1.0" encoding="utf-8"?>
<com.kingja.recyclerviewhelper.DrawHelperLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawHelperLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            style="@style/font_f_15"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:background="@mipmap/bg_cicle_blue"
            android:gravity="center"
            android:text="充电"/>

        <TextView
            android:id="@+id/tv_deviceId"
            style="@style/font_3_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="806111221122"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/bg_red"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_unbind"
            style="@style/font_f_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="解绑"/>

    </LinearLayout>


</com.kingja.recyclerviewhelper.DrawHelperLayout>