<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light">



    <LinearLayout

        android:background="@color/bg_white"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_houseType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                style="@style/font_3_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="房型" />

            <ImageView
                android:id="@+id/iv_arrow_houseType"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tv_houseType"
                style="@style/font_9_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/iv_arrow_houseType"
                android:text="" />
        </RelativeLayout>

        <View style="@style/divider_nomal_horizontal" />

        <RelativeLayout
            android:id="@+id/rl_houseArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                style="@style/font_3_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="面积" />

            <ImageView
                android:id="@+id/iv_arrow_houseArea"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tv_houseArea"
                style="@style/font_9_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/iv_arrow_houseArea"
                android:text="" />
        </RelativeLayout>

        <View style="@style/divider_nomal_horizontal" />

        <RelativeLayout
            android:id="@+id/rl_houseDecorate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                style="@style/font_3_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="装修程度" />

            <ImageView
                android:id="@+id/iv_arrow_houseDecorate"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tv_houseDecorate"
                style="@style/font_9_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/iv_arrow_houseDecorate"
                android:text="" />
        </RelativeLayout>

        <View style="@style/divider_nomal_horizontal" />

        <RelativeLayout
            android:id="@+id/rl_housePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">



            <TextView
                style="@style/font_3_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="租金" />

            <ImageView
                android:id="@+id/iv_arrow_housePrice"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tv_housePrice"
                style="@style/font_9_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/iv_arrow_housePrice"
                android:text="" />
        </RelativeLayout>

        <View style="@style/divider_nomal_horizontal" />

        <RelativeLayout
            android:id="@+id/rl_housePay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                style="@style/font_3_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="房租支付方式" />

            <ImageView
                android:id="@+id/iv_arrow_housePay"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tv_housePay"
                style="@style/font_9_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/iv_arrow_housePay"
                android:text="" />
        </RelativeLayout>

        <View style="@style/divider_nomal_horizontal" />

        <RelativeLayout
            android:id="@+id/rl_housePersons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                style="@style/font_3_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="容纳人数" />

            <ImageView
                android:id="@+id/iv_arrow_housePersons"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tv_housePersons"
                style="@style/font_9_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/iv_arrow_housePersons"
                android:text="" />
        </RelativeLayout>

        <View style="@style/divider_nomal_horizontal" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_houseConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                style="@style/font_3_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="房间配置" />

            <ImageView
                android:id="@+id/iv_arrow_houseConfig"
                android:layout_width="5dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tv_houseConfig"
                style="@style/font_9_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/iv_arrow_houseConfig"
                android:text="" />
        </RelativeLayout>

      <!--  <View style="@style/divider_nomal_horizontal" />-->

        <RelativeLayout
            android:id="@+id/rl_houseAuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                style="@style/font_3_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="是否自动发布" />

            <CheckBox
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:id="@+id/cb_houseAuto"

                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/sel_cb_switch"
                android:button="@null"
               />

        </RelativeLayout>

        <View style="@style/divider_nomal_horizontal" />

        <RelativeLayout
            android:id="@+id/rl_houseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                style="@style/font_3_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="发布信息标题" />

            <ImageView
                android:id="@+id/iv_arrow_houseTitle"
                android:layout_width="5dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tv_houseTitle"
                style="@style/font_9_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/iv_arrow_houseTitle"
                android:text="" />
        </RelativeLayout>

        <View style="@style/divider_nomal_horizontal" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_housePs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                style="@style/font_3_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="备注(选填)" />

            <ImageView
                android:id="@+id/iv_arrow_housePs"
                android:layout_width="5dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tv_housePs"
                style="@style/font_9_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/iv_arrow_housePs"
                android:text="" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>
