<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_doubledialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="版本更新"
        android:textColor="#000000"
        android:textSize="18dp" />

    <View style="@style/divider_nomal_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:lineSpacingExtra="4dp"
                android:id="@+id/tv_message"
                style="@style/font_content_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="发现先版本,请马上更新" />
        </ScrollView>
    </RelativeLayout>

    <View style="@style/divider_nomal_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_doubledialog_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sel_left_tr2gray"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_doubledialog_left"
                style="@style/font_gray_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="下次" />
        </RelativeLayout>

        <View style="@style/divider_nomal_vertical" />

        <RelativeLayout
            android:id="@+id/rl_doubledialog_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sel_right_tr2gray"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_doubledialog_right"
                style="@style/font_blue_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="更新" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>